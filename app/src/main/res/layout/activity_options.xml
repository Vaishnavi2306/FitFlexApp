<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".optionsActivity"
    android:background="@color/white">

    <TextView
        android:id="@+id/about"
        android:layout_width="274dp"
        android:layout_height="37dp"
        android:layout_marginTop="25dp"
        android:clickable="true"
        android:gravity="center"
        android:text="ABOUT APP"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/userdetails"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/userdetails"
        app:layout_constraintTop_toBottomOf="@+id/userdetails" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="100dp"
        android:layout_height="93dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/accounticon" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="229dp"
        android:layout_height="33dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="156dp"
        android:text="NAME"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.668"
        app:layout_constraintStart_toEndOf="@+id/imageButton4"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="184dp"
        android:layout_height="31dp"
        android:layout_marginTop="0dp"
        android:text="JOINED TODAY"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/account"
        android:layout_width="274dp"
        android:layout_height="37dp"
        android:layout_marginTop="164dp"
        android:clickable="true"
        android:gravity="center"
        android:text="ACCOUNT SETTINGS"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.402"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/progress"
        android:layout_width="274dp"
        android:layout_height="37dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="80dp"
        android:clickable="true"
        android:gravity="center"
        android:text="PROGRESS REPORT"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/account"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/account"
        app:layout_constraintTop_toBottomOf="@+id/account" />

    <TextView
        android:id="@+id/weightHistory"
        android:layout_width="274dp"
        android:layout_height="37dp"
        android:layout_marginTop="25dp"
        android:clickable="true"
        android:gravity="center"
        android:text="HISTORY"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/progress"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/progress"
        app:layout_constraintTop_toBottomOf="@+id/progress" />

    <TextView
        android:id="@+id/currentWeights"
        android:layout_width="274dp"
        android:layout_height="37dp"
        android:layout_marginTop="25dp"
        android:clickable="true"
        android:gravity="center"
        android:text="TODAY'S PROGRESS"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/weightHistory"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/weightHistory"
        app:layout_constraintTop_toBottomOf="@+id/weightHistory" />

    <TextView
        android:id="@+id/userdetails"
        android:layout_width="274dp"
        android:layout_height="37dp"
        android:layout_marginTop="25sp"
        android:clickable="true"
        android:gravity="center"
        android:text="USER DETAILS"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/currentWeights"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/currentWeights"
        app:layout_constraintTop_toBottomOf="@+id/currentWeights" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/logosmall" />
</androidx.constraintlayout.widget.ConstraintLayout>
