<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="10dp"
    android:background="@color/white"
    android:paddingEnd="10dp"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Main Heading -->
        <TextView
            android:id="@+id/main_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Details"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingBottom="10dp"/>

        <!-- Sub Heading -->
        <TextView
            android:id="@+id/sub_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to FITFLEX"
            android:textSize="18sp"
            android:textStyle="italic"
            android:layout_gravity="center"
            android:paddingBottom="20dp"/>

        <!-- Name Field (AutoComplete) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="16sp" />
        <AutoCompleteTextView
            android:id="@+id/editTextName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your name"
            android:layout_marginBottom="10dp"
            android:inputType="text"/>

        <!-- Age Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/editTextAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your age"
            android:inputType="number"
            android:layout_marginBottom="10dp"/>

        <!-- Gender Spinner -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textSize="16sp" />
        <Spinner
            android:id="@+id/spinnerGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"/>

        <!-- Date of Birth Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of Birth"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/editTextDob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select your date of birth"
            android:focusable="false"
            android:layout_marginBottom="10dp"/>

        <!-- Start Date Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Date"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/editTextStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select the start date"
            android:focusable="false"
            android:layout_marginBottom="10dp"/>

        <!-- Target Date Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Target Date"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/editTextTargetDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select the target date"
            android:focusable="false"
            android:layout_marginBottom="10dp"/>

        <!-- Weight Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight (kg)"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/editTextWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your current weight"
            android:inputType="numberDecimal"
            android:layout_marginBottom="10dp"/>

        <!-- Height Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Height (m)"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/editTextHeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your height"
            android:inputType="numberDecimal"
            android:layout_marginBottom="10dp"/>

        <!-- Target Weight Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Target Weight (kg)"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/editTextTargetWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your target weight"
            android:inputType="numberDecimal"
            android:layout_marginBottom="10dp"/>

        <!-- BMI Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BMI"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/editTextBmi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="BMI will be calculated automatically"
            android:inputType="numberDecimal"
            android:focusable="false"
            android:layout_marginBottom="10dp"/>

        <!-- Total Days Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Days"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/editTextTotalDays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Total days will be calculated automatically"
            android:inputType="number"
            android:focusable="false"
            android:layout_marginBottom="20dp"/>

        <!-- Save Button -->
        <Button
            android:id="@+id/buttonSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF5722"
            android:text="Save"
            android:textSize="18sp"
            android:layout_marginBottom="20dp" />

        <!-- ImageView for Logo at the bottom-right -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logosmall"
            android:layout_gravity="end|bottom"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp" />

    </LinearLayout>
</ScrollView>
